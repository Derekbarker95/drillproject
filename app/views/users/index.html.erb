<% if user_signed_in? %>
	<h1>All Users</h1>
  <% @users.each do |u| %>
    <% if u != current_user%>
      <div class="well">
      <h2><%=  u.email %></h2>
      <p> <%= u.full_name %> </p>
      <%= link_to "Destroy user", user_path(u), method: :delete, style: "color: red" %>
      <% if u.is_admin? %>
        <%= button_to "Undo Admin", toggle_path(u.id), method: :patch, class: "btn btn-warning" %>
      <% else %>
        <%= button_to "Make Admin", toggle_path(u.id), method: :patch, class: "btn btn-warning" %>
  
      <% end %>
      </div>
    <% end %>
  <% end %>

<% elsif user_signed_in? %>

  <h1> Sorry, you must be an admin user to access this page </h1> 


<% end %>

