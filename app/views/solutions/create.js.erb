$('#flash_message').html('');

<%# Display the flash messages if any %>
<%= "$('#flash_message').append('<div class=\"alert alert-success\">#{flash[:notice]}</div>');".html_safe if flash[:notice] %>
<%= "$('#flash_message').append('<div class=\"alert alert-danger\">#{flash[:alert]}</div>');".html_safe if flash[:alert] %>

<% unless @solution.errors.any? %>
  <%# Show the create associated Solution form %>
  $('#new_drill_solutions_form').html('<%= j render partial: "/drill_groups/new_drill_solutions_form", locals: { drill: @drill } %>');
  <%# Show the newly created Solution in the list below the form %>
  $('#drill_solutions').append('<%= j render partial: "/solutions/solution", locals: { solution: @solution } %>');
<% end %>