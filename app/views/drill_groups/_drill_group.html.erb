<%= simple_form_for @drill_group, class: "form-horizontal" do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.association :level, as: :radio_buttons, label_method: :title %>
  <%= f.association :tags, as: :check_boxes, label_method: :title, label: 'Categories' %>
  <%= f.button :submit %>
<% end %>

